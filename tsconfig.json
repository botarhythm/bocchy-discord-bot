{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "config/**/*"],
  "exclude": ["node_modules", "dist"]
} 